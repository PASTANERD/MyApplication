                        android:id="@+id/cartime4"
                        android:gravity="center"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="입차시간 :" />

                    <Button
                        android:id="@+id/getin4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onInOut"
                        android:text="입차" />

                    <Button
                        android:id="@+id/getout4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:onClick="onInOut"
                        android:enabled="false"
                        android:text="출차" />
                </LinearLayout>
            </LinearLayout>
        </TableRow>

    </TableLayout>

</LinearLayout>